{{#if loggedIn}}
<div class="container-fluid">


<!-- blogPost cards -->
<div>
{{#each blogPosts as |blogPost|}}

<div class="clsBlogCard" id="blogCard">
  <header class="clsCardHeader" id="{{blogPost.id}}">
    <span id:"blogCardTitle" ">
    {{blogPost.title}}
    </span>
    <span id:"blogCardTimestamp">
    Posted by {{blogPost.user}} on {{formatDate blogPost.createdAt}}
    </span>
  </header>
    <p id:"blogContent" class="clsCardContent">
    {{blogPost.content}}
   
    </p>
</div>

<!-- edit post cards -->
<div id="editPost{{blogPost.id}}" class="clsBlogCard clsCardHidden">
  <header>
    <span id:"title">
      Update or Delete Post
    </span>
    <span id:"timestamp">
    </span>
  </header>
    <p>
    <label class="clsPostLabel"   for="inputEditPostTitle">Title</label>
    <textarea class="clsPostInput" id="inputEditPostTitle" rows="1" cols="15">{{blogPost.title}}</textarea>
    <label class="clsPostLabel"   for="inputEditPostContent">Content</label>
    <textarea class="clsPostInput" id="inputEditPostContent" rows="5" cols="15">{{blogPost.content}}</textarea>
    <button class="clsPostButton" value="{{blogPost.id}}" id="editPostButton">Update Post</button>
    <button class="clsPostButton" value="{{blogPost.id}}" id="deletePostButton">Delete</button>
    </p>
</div>

{{/each}}
<div>
 <button class="clsNewPostButton" id="newPostButton">+ New Post</button>
</div>
</div>


<!-- New Post cards -->
<div class="clsBlogCard clsCardHidden" id="newPostCard">
  <header>
    <span id:"title">
      Create New Post
    </span>
    <span id:"timestamp">
    </span>
  </header>
    <p>
    <label class="clsPostLabel" for="inputNewPostTitle">Title</label>
    <textarea class="clsPostInput" id="inputNewPostTitle" rows="1" cols="15"></textarea>
    <label class="clsPostLabel" for="inputNewPostContent">Content</label>
    <textarea class="clsPostInput" id="inputNewPostContent" rows="5" cols="15"></textarea>
    <button class="clsPostButton" id="createPostButton">Create</button>
  </p>
</div>
</div>
{{else}}
<div>
<a href="/login">You must login first to view the blogs</a>
</div>
{{/if}}

